#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>
#include <ctype.h>

#ifdef _WIN32
    #include <windows.h>
    #define CLEAR "cls"
#else
    #define CLEAR "clear"
#endif

#define MAX_TRIES 10
#define MAX_WORD_LEN 20

// Правильный рисунок виселицы как в ТЗ
const char *hangman_parts[] = {
    "",
    "   o   ",
    "  -|-  ",
    "  / \\  ",
};

const char *hangman_frame[] = {
    "_________",
    "|   |   |",
    "|       |",
    "|       |",
    "|       |",
    "|       |",
    "|\\     /|"
};

// Слова на английском (6-8 букв)
const char *words[] = {
    "program", "computer", "student", "display", "keyboard",
    "monitor", "network", "system", "object", "function",
    "variable", "operator", "process", "memory", "console"
};

const int word_count = sizeof(words) / sizeof(words[0]);

void clear_screen() {
    system(CLEAR);
}
